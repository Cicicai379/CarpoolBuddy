<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.AppInfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#333b6a"
        android:onClick="SignOut"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".controllers.UserProfileActivity">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:onClick="MainActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/return_icon" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="162dp"
            android:fontFamily="sans-serif-black"
            android:text="About This App"
            android:textColor="#E6E8E7"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/app_info"
            android:layout_width="266dp"
            android:layout_height="256dp"
            android:layout_marginStart="91dp"
            android:layout_marginTop="269dp"
            android:fontFamily="sans-serif-medium"
            android:text="Hi! This app was designed by the CIS CS Department and created by Cici. The aim of this app is to promote sustainable consumption by encouraging carpooling. If you would like to contact the author, please email caiyuxin379@gmail.com"
            android:textColor="#FAF6F6"
            android:textColorHighlight="#FAF6F6"
            android:textColorHint="#FAF6F6"
            android:textColorLink="#FAF6F6"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:onClick="MainActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/return_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>