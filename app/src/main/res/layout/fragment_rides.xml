<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.fragments.RidesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="180dp"
            android:layout_height="61dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="Activity"
            android:textSize="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="409dp"
            android:layout_height="745dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageView
                android:id="@+id/add_button"
                android:layout_width="74dp"
                android:layout_height="77dp"
                android:layout_marginStart="312dp"
                android:layout_marginTop="660dp"
                android:src="@drawable/add_shadow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_marginStart="34dp"
                android:layout_marginBottom="420dp"
                android:backgroundTint="#F69292"
                android:src="@drawable/rectangle"
                android:tint="#E4E4E4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_marginTop="170dp"
                android:layout_marginEnd="34dp"
                android:backgroundTint="#F69292"
                android:src="@drawable/rectangle"
                android:tint="#E4E4E4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="341dp"
                android:layout_height="41dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="104dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="Share the Ride, Multiply the Joy!"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_marginTop="367dp"
                android:layout_marginEnd="224dp"
                android:backgroundTint="#F69292"
                android:src="@drawable/rectangle"
                android:tint="#E4E4E4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="155dp"
                android:layout_height="155dp"
                android:layout_marginStart="212dp"
                android:layout_marginTop="367dp"
                android:layout_marginEnd="34dp"
                android:backgroundTint="#F69292"
                android:src="@drawable/rectangle"
                android:tint="#E4E4E4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>