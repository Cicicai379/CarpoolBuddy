<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="10dp">

    <!-- Customize your TableRow layout here -->
    <!-- Add views, set attributes, etc. -->

    <ImageView
        android:id="@+id/image"
        android:layout_width="125dp"
        android:layout_height="95dp"
        android:layout_marginTop="6dp"
        app:srcCompat="@drawable/rectangle" />

    <LinearLayout
        android:layout_width="254dp"
        android:layout_height="113dp"
        android:orientation="vertical"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/location"
            android:layout_width="232dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Taikoo to Chinese International School"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/info"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="30 HKD |  7:00 PM 12/12/2023 | 3 seats"
            android:textColor="#9F9F9F"
            android:textColorHint="#D1CFCF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/owner"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Cici: 5.00"
            android:textColor="#A1A1A1"
            android:textSize="14sp" />
    </LinearLayout>

</TableRow>